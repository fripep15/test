package com.class14;

public class SplitMethod2 {

	public static void main(String[] args) {
		
		// how many clasuse are there in the following string:  ( the commma separation), comma delemated values.... anything like this
		//this is coma separated 
		
		String str="If you come to class early, then you  can study more, also you can learn more, and you can leave early";
		
		String [] array=str.split(",");
		
		for (int i=0; i<array.length; i++) {
		System.out.println(array[i]);
		
	}
		
		System.out.println("**** 2***** String other .*************");
		
		String str1="Welcome to Syntax Technologies";
		String[] array2=str1.split(" ", 3);
		System.out.println(array.length);
		
		System.out.println("*********************************");
		
		for (int i=0; i<array2.length; i++) {
		System.out.println(array2[i]);
		
		
		
		}
}
}